<project name="MarkovBot" default="compile" basedir=".">
	<description>Markov Chain Bot</description>

	<property name="main" value="uk.co.ignignokt.markovbot.Main"/>

	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dist" location="dist"/>

	<property name="lib" location="lib"/>

	<property name="version" value="0.1"/>

        <path id="classpath">
                <fileset dir="${lib}" includes="**/*.jar"/>
        </path>

	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init" description="Compile source code">
                <copy file="../Markov/dist/markov-${version}.jar" tofile="lib/markov-${version}.jar" />
	        <javac srcdir="${src}" destdir="${build}" classpathref="classpath" includeantruntime="false"/>
	</target>

	<target name="dist" depends="compile" description="Create JAR file">
		<mkdir dir="${dist}"/>

	        <jar destfile="${dist}/markovbot-${version}.jar" basedir="${build}">
	        	<zipgroupfileset dir="${lib}" includes="*.jar"/>
	                <manifest>
	                	<attribute name="Main-Class" value="${main}"/>
	                	<attribute name="Class-Path" value=""/>
	                </manifest>
	        </jar>
	</target>

	<target name="clean" description="Clean compile and dist">
        <delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>

	<target name="run" depends="dist" description="Run the program">
		<java fork="true" jar="${dist}/markovbot-${version}.jar"/>
	</target>
</project>
